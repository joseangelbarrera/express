extends layout

block content

  ul


  .container
    .row
      .col-md-6
        .todolist.not-done
          h1 List Users
          form(action='/users', method='POST')
            input.form-control.add-todo(name="username", type='text', placeholder='Add todo')
            button#checkAll.btn.btn-primary Add User
          hr
          ul#sortable.list-unstyled.list-group.list-users
            each name,index in names
              li.list-group-item
                span #{name}&nbsp;
                form.edit-form(action=`/users/${index}`)
                  input.hidden(name='edited-name', value=name)
                button.btn.btn-primary.edit(href=`/users/${index}`)
                  i.glyphicon.glyphicon-edit
                button.btn.btn-danger.remove(href=`/users/${index}`)
                  i.glyphicon.glyphicon-remove


          //.todo-footer
            strong
              span.count-todos
            |  Items Left
      //.col-md-6
        .todolist
          h1 Already Done
          ul#done-items.list-unstyled
            li
              | Some item
              button.remove-item.btn.btn-default.btn-xs.pull-right
                span.glyphicon.glyphicon-remove
