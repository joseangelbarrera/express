.panel.panel-default
  .panel-heading.text-center
    h4 Current Cart
  .panel-body
    table.table.borderless.list-cart
      thead
        tr
          td
            strong Your Cart: # item
          td
          td
          td
          td
      tbody
        each itemCart in cart
          tr
            td
              h5.item-name  #{itemCart.productName}
              .col-md-6
                .media
                  a.thumbnail(href='#')
                    img.media-object(src=itemCart.image, style='width: 72px; height: 72px;')
                  .media-body
              .col-md-2
                span Price: #{itemCart.price}â‚¬
              .col-md-2
                span Quantity:
                  input.quantity(type="number", style="width:50px", value= 1 +itemCart.quantity)
                span Total price:
                  input(value=+itemCart.price *+itemCart.quantity, name="id", disabled)
                  - var a = +itemCart.price
                  - var b = 1 +itemCart.quantity
                  p #{+a+b}
                  p #{+a-b}
                  p #{+a*b}
                  p #{+a/b}
                  p #{+itemCart.price*itemCart.quantity}
                  input(value=itemCart.id, name="id", disabled)
              .col-md-2
                a.btn.btn-danger.remove(href=`/cart/${itemCart.id}`) Remove
